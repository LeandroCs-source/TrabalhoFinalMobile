<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    app:layoutDescription="@xml/activity_cadastro_livro_scene"
    tools:context=".main.CadastrarLivroActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/roboto_black"
        android:gravity="center"
        android:text="Cadastro Livro"
        android:textColor="#FFC107"
        android:textSize="33sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutCadastroTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp"
        app:boxBackgroundMode="filled">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputCadastroTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:hint="Título"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#FFC107"
            android:textSize="19sp"
            android:textStyle="bold" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutCadastroAutor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp"
        app:boxBackgroundMode="filled">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputCadastroAutor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:hint="Autor"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_black"
        android:padding="10dp"
        android:paddingStart="10dp"
        android:text="Gênero"
        android:textColor="#627275"
        android:textSize="19sp" />

    <Spinner
        android:id="@+id/spinnerCadastroGenero"
        android:layout_width="378dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:paddingStart="10dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_black"
        android:padding="10dp"
        android:paddingStart="10dp"
        android:text="Avaliação"
        android:textColor="#627275"
        android:textSize="19sp" />

    <Spinner
        android:id="@+id/spinnerCadastroAvalicacao"
        android:layout_width="381dp"
        android:layout_height="57dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="10dp"
        android:padding="12dp" />

    <Button
        android:id="@+id/btnCadastrarLivro"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FFC107"
        android:fontFamily="@font/roboto_black"
        android:text="Cadastrar"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="20px" />

    <Button
        android:id="@+id/btnVoltarLivro"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FFC107"
        android:fontFamily="@font/roboto_black"
        android:text="Voltar"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="20px" />


</LinearLayout>