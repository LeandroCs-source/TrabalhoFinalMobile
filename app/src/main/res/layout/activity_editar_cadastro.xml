<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".main.EditarCadastroActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/roboto_black"
        android:gravity="center"
        android:text="Editar Livro"
        android:textColor="#FFC107"
        android:textSize="33sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutEditarTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp"
        app:boxBackgroundMode="filled">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputEditarTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:hint="Título"
            android:padding="10dp"
            android:textSize="19sp"
            android:textStyle="bold" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutEditarAutor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp"
        app:boxBackgroundMode="filled">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputEditarAutor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:hint="Autor"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="19sp"
            android:textStyle="bold" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_black"
        android:padding="10dp"
        android:paddingStart="12dp"
        android:text="Gênero"
        android:textColor="#627275"
        android:textSize="19sp" />

    <Spinner
        android:id="@+id/spinnerEditarGenero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_black"
        android:padding="10dp"
        android:paddingStart="12dp"
        android:text="Avaliação"
        android:textSize="19sp" />

    <Spinner
        android:id="@+id/spinnerEditarAvalicacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="10dp"
        android:padding="12dp" />

    <Button
        android:id="@+id/btnEditarLivro"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FFC107"
        android:text="Editar"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="50px" />

    <Button
        android:id="@+id/btnEditarVoltar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FFC107"
        android:text="Voltar"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="50px" />


</LinearLayout>